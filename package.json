{
  "name": "Books",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "dependencies": {
    "@cap-js/hana": "^2",
    "@sap/cds": "^9",
    "@sap/cds-mtxs": "^3",
    "@sap/xssec": "^4",
    "express": "^4"
  },
  "devDependencies": {
    "@cap-js/sqlite": "^2",
    "@sap/cds-dk": "^9",
    "cds-plugin-ui5": "^0.13.0"
  },
  "scripts": {
    "start": "cds-serve",
    "watch-books": "cds watch --open com.satinfotech.com.books/index.html?sap-ui-xx-viewCache=false --livereload false"
  },
  "private": true,
  "workspaces": [
    "app/*"
  ],
  "sapux": [
    "app/books"
  ],
  "cds": {
    "requires": {
      "html5-repo": true,
      "destinations": true,
      "[development]": {
        "db": {
          "kind": "sqlite",
          "credentials": {
            "database": "db.sqlite"
          }
        }
      },
      "[production]": {
        "auth": "xsuaa",
        "db": {
          "kind": "hana"
        },
        "multitenancy": true
      },
      "[with-mtx]": {
        "multitenancy": true
      }
    },
    "profile": "with-mtx-sidecar"
  }
}
